<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgblue"
    tools:context="devdeep.savinggrow.LoginActivity">

<!--    set this activity to login and shows data on its already.
    But i can't make this to first activity ahhhhhhh -->
    <Button
        android:id="@+id/btn_log"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Log in"
        style="@style/Widget.AppCompat.Button.Colored"
        />
    <ImageButton
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_log"
        app:srcCompat="@mipmap/ic_app_saving"/>
    <TextView
        android:id="@+id/tv_username"
        android:layout_below="@+id/btn_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Name"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_username"
        android:layout_below="@+id/tv_username"
        android:text="password"
        android:textSize="30sp" />

</RelativeLayout>
