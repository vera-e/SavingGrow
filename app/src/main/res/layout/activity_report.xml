                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                android:layout_gravity="top"
                android:background="@color/bgtext"
                style="@style/Widget.AppCompat.ButtonBar.AlertDialog">
                <!--tell date that day-->
                <EditText
                    android:id="@+id/ed_datereport"
                    android:layout_width="match_parent"
                    android:layout_weight="1.25"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/ednum_size"
                    android:textColor="@color/white"
                    android:padding="4dp"
                    android:text="12/5/1997"
                    android:background="@color/GrayHint"
                    style="@style/Widget.AppCompat.ButtonBar"/>
                //income all day
                <EditText
                    android:id="@+id/ed_income"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="#003cff"
                    android:text="$100.00"
                    android:gravity="right"
                    android:textSize="@dimen/tvnum_size"
                    android:paddingRight="10dp"/>
                //expense all day
                <EditText
                    android:id="@+id/ed_expense"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="#ff0000"
                    android:text="$2580"
                    android:gravity="right"
                    android:textSize="@dimen/tvnum_size"
                    android:paddingRight="10dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--for a thing-->
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@color/Black"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="5dp">
                    <EditText
                        android:id="@+id/ed_categoryreport"
                        android:layout_width="match_parent"
                        android:layout_weight="1.1"
                        android:layout_height="match_parent"
                        android:background="@color/bgtext"
                        android:text="Food"
                        android:inputType="none"
                        android:textColor="@color/GrayHint"
                        android:paddingLeft="12dp"
                        android:textSize="11dp"
                        />
                    <EditText
                        android:id="@+id/ed_titlereport"
                        android:layout_width="match_parent"
                        android:layout_weight="0.95"
                        android:layout_height="match_parent"
