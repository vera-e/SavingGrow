<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bggray"
    tools:context="devdeep.savinggrow.ReportActivity">
    <!--totaldata-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- just text status -->
        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/Black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:layout_height="match_parent"
                android:background="@color/bgtext"
                android:text="@string/income"
                android:inputType="none"
                android:textColor="@color/Black"
                android:paddingLeft="12dp"
                android:textSize="11sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:layout_height="match_parent"
                android:background="@color/bgtext"
                android:text="@string/expense"
                android:inputType="none"
                android:textColor="@color/Black"
                android:paddingLeft="12dp"
                android:textSize="11sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:layout_height="match_parent"
                android:background="@color/bgtext"
                android:text="Total"
                android:paddingRight="10dp"
                android:inputType="none"
                android:textColor="@color/Black"
                android:paddingLeft="12dp"
                android:textSize="11sp" />

        </LinearLayout>
        <!--status show all total data-->
        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/Black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
         >
            <EditText
                android:id="@+id/ed_total_income"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="top|center"
                android:layout_height="match_parent"
                android:background="@color/bgtext"
                android:text="$2000"
                android:inputType="none"
                android:textColor="#0540fd"
                android:paddingLeft="12dp"
                android:textSize="@dimen/tvnum_size"
                />
            <EditText
                android:id="@+id/ed_total_expense"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/bgtext"
                android:gravity="top|center"
                android:text="$5000"
                android:inputType="none"
                android:textColor="#ff0000"
                android:paddingLeft="12dp"
                android:textSize="@dimen/tvnum_size"
                />
            <EditText
                android:id="@+id/ed_total_total"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/bgtext"
                android:gravity="top|center"
                android:padding="5dp"
                android:text="$-3000"
                android:inputType="none"
                android:textColor="@color/Black"
                android:paddingLeft="12dp"
                android:textSize="@dimen/tvnum_size"
                />
        </LinearLayout>

    </LinearLayout>
    <!--each data report on scroll view-->
    <ScrollView
